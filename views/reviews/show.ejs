<%- include('../partials/head') %>
<div class="container mt-4">
    <div class="card mx-auto" style="max-width: 1000px;">
        <div class="card-body">
            <h4 class="card-title text-primary fw-bold"><%= review.title %></h4>
            <p class="card-text"><strong>Reviewed by: <%= review.author %></strong></p>
            <p class="card-text">Rating: <%= review.rating %> ‚≠ê</p>
            <p class="card-text"><%= review.reviewText %></p>

            <div class="btn-group" role="group" aria-label="Basic checkbox toggle button group">
                <% if (review.reviewer._id.equals(user._id)) { %>
                    <!-- Edit Button -->
                    <input type="checkbox" class="btn-check" id="edit-btn" autocomplete="off">
                    <label class="btn btn-outline-primary" for="edit-btn" onclick="window.location.href='/reviews/<%= user._id %>/<%= review._id %>/edit'">Edit</label>
                    
                    <!-- Delete Button -->
                    <input type="checkbox" class="btn-check" id="delete-btn" autocomplete="off">
                    <label class="btn btn-outline-danger" for="delete-btn" onclick="if (confirm('Are you sure you want to delete this review?')) { window.location.href = '/reviews/<%= user._id %>/<%= review._id %>?_method=DELETE'; }">Delete</label>
                <% } %>
            </div>
            
            <!-- Back to Reviews Button -->
            <div class="mt-3">
                <a href="/reviews" class="btn btn-secondary">Back to Reviews</a>
            </div>
        </div>
    </div>
</div>

<%- include('../partials/footer') %>
